<table class="table table-striped table-hover" n:snippet="table">
<thead n:snippet="head">
	<tr>
		<th>#</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>E-Mail</th>
		<th>Company</th>
	</tr>
</thead>
<tbody n:snippet="data">
{foreach $data as $row}
	<tr>
		<th scope="row">{$row->id}</th>
		<td>{$row->firstName}</td>
		<td>{$row->lastName}</td>
		<td>{$row->email}</td>
		<td>{$row->company}</td>
	</tr>
{/foreach}
</tbody>
</table>